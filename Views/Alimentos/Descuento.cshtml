@model List<MvcAlimentosApp.Models.Descuento>

@{
    ViewData["Title"] = "Revisar Descuentos";
}

<div class="background-container">
    <div class="form-card">
        <h2 class="text-center mb-4">Descuentos Disponibles</h2>

        <div class="table-responsive">
            <table class="table table-bordered table-striped shadow-lg discount-table">
                <thead>
                    <tr>
                        <th class="text-center">Alimento</th>
                        <th class="text-center">Empresa</th>
                        <th class="text-center">Descuento</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var d in Model)
                    {
                        <tr>
                            <td class="text-center">@d.NombreAlimento</td>
                            <td class="text-center">@d.Empresa</td>
                            <td class="text-center">@d.Porcentaje %</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>

